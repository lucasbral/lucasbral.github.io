---
interface TimelineItem {
    title: string;
    date: string;
    description: string;
}

interface Props {
    items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="timeline-wrapper">
    <div class="timeline-line"></div>
    {
        items.map((item, index) => (
            <div class="timeline-item">
                <div class="dot" />
                <div
                    class="content fade-in-up"
                    style={`animation-delay: ${index * 150}ms`}
                >
                    <span class="date">{item.date}</span>
                    <h3>{item.title}</h3>
                    <p>{item.description}</p>
                </div>
            </div>
        ))
    }
</div>

<style>
    .timeline-wrapper {
        position: relative;
        padding: 2rem 0;
        max-width: 800px;
        margin: 0 auto;
    }

    /* Vertical Line */
    .timeline-line {
        position: absolute;
        left: 20px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(
            to bottom,
            var(--accent) 0%,
            transparent 100%
        );
    }

    @media (min-width: 768px) {
        .timeline-line {
            left: 50%;
            margin-left: -1px;
        }
    }

    .timeline-item {
        position: relative;
        margin-bottom: 4rem;
        padding-left: 60px;
    }

    @media (min-width: 768px) {
        .timeline-item {
            padding-left: 0;
            width: 50%;
        }

        /* Right side items */
        .timeline-item:nth-child(odd) {
            margin-left: auto;
            padding-left: 3rem;
            text-align: left;
        }

        /* Left side items */
        .timeline-item:nth-child(even) {
            text-align: right;
            padding-right: 3rem;
        }

        .timeline-item:nth-child(even) .content {
            align-items: flex-end;
        }
    }

    /* The Dot */
    .dot {
        position: absolute;
        left: 11px;
        top: 0;
        width: 20px;
        height: 20px;
        background: var(--color-bg);
        border: 4px solid var(--accent);
        border-radius: 50%;
        z-index: 2;
        transition: all 0.3s ease;
    }

    .timeline-item:hover .dot {
        background: var(--accent);
        transform: scale(1.3);
        box-shadow: 0 0 20px var(--accent);
    }

    @media (min-width: 768px) {
        .dot {
            left: auto;
            right: -10px; /* For left items */
        }

        .timeline-item:nth-child(odd) .dot {
            left: -10px;
            right: auto;
        }
    }

    .content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1.5rem;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: 16px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

    .timeline-item:hover .content {
        transform: translateY(-5px);
        border-color: var(--accent);
    }

    .date {
        font-size: 0.85rem;
        font-weight: 700;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    h3 {
        margin: 0;
        font-size: 1.25rem;
        color: var(--color-text);
    }

    p {
        margin: 0;
        color: var(--gray);
        line-height: 1.6;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
    }
</style>
