---
interface Props {
    title: string;
    subtitle: string;
    description: string;
    image: string;
    link?: string;
    reverse?: boolean;
}

const {
    title,
    subtitle,
    description,
    image,
    link,
    reverse = false,
} = Astro.props;
---

<article class={`project-card ${reverse ? "reverse" : ""}`}>
    <div class="image-section">
        <img src={image} alt={title} loading="lazy" />
        <div class="overlay"></div>
    </div>

    <div class="content-section">
        <div class="tags">
            <span class="tag">Project</span>
        </div>
        <h3>{title}</h3>
        <span class="role">{subtitle}</span>
        <p>{description}</p>

        {
            link && (
                <a href={link} target="_blank" class="project-btn">
                    View Project <span class="arrow">â†’</span>
                </a>
            )
        }
    </div>
</article>

<style>
    .project-card {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: 24px;
        overflow: hidden;
        padding: 1rem;
        margin-bottom: 4rem;
        transition: all 0.4s ease;
    }

    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
        border-color: var(--color-text);
    }

    @media (min-width: 900px) {
        .project-card {
            grid-template-columns: 1.2fr 1fr;
            align-items: center;
            padding: 0;
            background: transparent;
            border: none;
            box-shadow: none;
        }

        .project-card:hover {
            transform: none;
            box-shadow: none;
            border: none;
        }

        .project-card.reverse {
            direction: rtl; /* Easy way to swap columns */
        }

        .project-card.reverse .content-section {
            direction: ltr; /* Reset text direction */
            padding-left: 0;
            padding-right: 4rem;
        }

        .project-card:not(.reverse) .content-section {
            padding-left: 4rem;
        }
    }

    .image-section {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        aspect-ratio: 16/10;
    }

    .image-section img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .project-card:hover .image-section img {
        transform: scale(1.05);
    }

    .content-section {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .tags {
        margin-bottom: 1rem;
    }

    .tag {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--accent);
        background: rgba(59, 130, 246, 0.1);
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
    }

    h3 {
        font-size: 2rem;
        margin: 0 0 0.5rem 0;
        color: var(--color-text);
        font-weight: 800;
    }

    .role {
        font-family: monospace;
        color: var(--gray);
        font-size: 1rem;
        margin-bottom: 1.5rem;
        display: block;
    }

    p {
        color: var(--gray);
        line-height: 1.7;
        margin-bottom: 2rem;
        font-size: 1.05rem;
    }

    .project-btn {
        display: inline-flex;
        align-items: center;
        color: var(--color-text);
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        gap: 0.5rem;
        width: fit-content;
        position: relative;
    }

    .project-btn::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0%;
        height: 2px;
        background: var(--accent);
        transition: width 0.3s ease;
    }

    .project-btn:hover::after {
        width: 100%;
    }

    .arrow {
        transition: transform 0.3s ease;
    }

    .project-btn:hover .arrow {
        transform: translateX(5px);
    }
</style>
