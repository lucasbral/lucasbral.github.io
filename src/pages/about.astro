---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/about/Hero.astro";
import Timeline from "../components/about/Timeline.astro";
import ProjectCard from "../components/about/ProjectCard.astro";

const timelineItems = [
    {
        title: "Data Engineering and Analysis",
        date: "2022 - Present",
        description:
            "Junior Data Engineer, working with Cloud technologies, ETL, and modern data architecture.",
    },
    {
        title: "Automotive Software Development",
        date: "2023 - 2024",
        description:
            "Specialization in partnership with Stellantis. Focus on C/C++, Autosar, and critical embedded systems.",
    },
    {
        title: "Operational Excellence and B.I.",
        date: "2020 - 2022",
        description:
            "Industry experience focused on loss reduction, dashboard creation, and KPI analysis.",
    },
    {
        title: "Research and Extension",
        date: "2017 - 2020",
        description:
            "Academic projects in partnership with private companies for electronic device testing.",
    },
    {
        title: "Electronics and Robotics",
        date: "2015 - 2017",
        description:
            "Beginning of academic journey and participation in robotics competitions.",
    },
];
---

<Layout
    title="About Me - Lucas Sobral"
    description="Learn more about Lucas Sobral, Engineer and Developer."
    fullWidth={true}
>
    <main class="about-page">
        <Hero
            title="Lucas Sobral"
            subtitle="Electronic Engineer, Master in Systems Engineering, and passionate about transforming data into solutions."
            image="/img/eu.png"
        />

        <section id="trajectory" class="section-container">
            <div class="section-header">
                <h2>My Journey</h2>
                <p>Key milestones of my professional and academic career.</p>
            </div>
            <Timeline items={timelineItems} />
        </section>

        <section id="projects" class="section-container">
            <div class="section-header">
                <h2>Favorite Projects</h2>
                <p>Some of the work I developed with care.</p>
            </div>

            <ProjectCard
                title="Data Engineering with GCP"
                subtitle="Google Cloud Platform & Big Data"
                description="Looker Studio dashboard with INMET data, processed with Pandas/PySpark and Apache Beam on GCP. A complete end-to-end pipeline."
                image="/img/data-eng.png"
            />

            <ProjectCard
                title="Airflow & Spotify API"
                subtitle="Automation & ETL"
                description="Automation of daily extraction of Spotify top 50 songs using Apache Airflow and NoSQL storage with MongoDB."
                image="/img/airflow.png"
                link="https://github.com/lucasbral/spotify_pipeline"
                reverse={true}
            />

            <ProjectCard
                title="Futscrap"
                subtitle="Webscraping & Python"
                description="Python script using Selenium and BeautifulSoup to extract detailed player statistics from Opta Player Stats platform."
                image="/img/scrap.png"
                link="https://github.com/lucasbral/fut_scrap"
            />

            <ProjectCard
                title="Streamlit & DuckDB"
                subtitle="High-Performance Data App"
                description="Interactive application for legacy data analysis (Firebird/Parquet) using DuckDB and Streamlit, optimized for low-resource hardware (2 vCPUs)."
                image="/img/streamlit-duckdb.png"
                reverse={true}
            />

            <ProjectCard
                title="AWS Serverless Pipeline"
                subtitle="Lambda, DynamoDB & EventBridge"
                description="Automated serverless data pipeline for Yu-Gi-Oh! API data ingestion into DynamoDB with daily scheduling via EventBridge."
                image="/img/aws-pipeline.png"
            />
        </section>

        <section id="contact" class="section-container contact-section">
            <div class="contact-box">
                <h2>Let's Talk?</h2>
                <p>
                    I'm always open to new opportunities and ideas. Get in
                    touch!
                </p>
                <div class="social-links">
                    <a
                        href="mailto:lucasdecarvalhosobral@gmail.com"
                        class="social-btn email"
                    >
                        Email
                    </a>
                    <a
                        href="https://www.linkedin.com/in/lucasbral/"
                        target="_blank"
                        class="social-btn linkedin"
                    >
                        LinkedIn
                    </a>
                    <a
                        href="https://github.com/lucasbral"
                        target="_blank"
                        class="social-btn github"
                    >
                        GitHub
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .about-page {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem 4rem 1.5rem;
    }

    .section-container {
        margin-top: 8rem;
        opacity: 0;
        animation: fadeIn 1s ease-out forwards;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-header h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: linear-gradient(
            135deg,
            var(--color-text) 0%,
            var(--gray) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .section-header p {
        color: var(--gray);
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-box {
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: 30px;
        padding: 4rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 2.5rem;
        flex-wrap: wrap;
    }

    .social-btn {
        padding: 1rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.3s ease;
        color: white;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .social-btn:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .email {
        background: #ea4335;
    }
    .linkedin {
        background: #0077b5;
    }
    .github {
        background: #333;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
</style>
