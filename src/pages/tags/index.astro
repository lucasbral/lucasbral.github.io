---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/Sidebar.astro";
import RightSidebar from "../../components/RightSidebar.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = await getCollection("blog");

// Extract unique tags and group posts
const tags: Record<string, typeof posts> = {};
posts.forEach((post) => {
    if (post.data.tags) {
        post.data.tags.forEach((tag) => {
            if (!tags[tag]) {
                tags[tag] = [];
            }
            tags[tag].push(post);
        });
    }
});

const sortedTags = Object.keys(tags).sort();
---

<Layout title="Tags" fullWidth={true}>
    <div class="page-layout">
        <aside class="left-sidebar sidebar-container">
            <Sidebar />
        </aside>

        <div class="main-content">
            <h1>Tags</h1>
            <div class="tags-container">
                {
                    sortedTags.map((tag) => (
                        <details class="tag-group">
                            <summary class="tag-name">
                                <span class="tag-icon">üè∑Ô∏è</span>
                                {tag}
                                <span class="count">({tags[tag].length})</span>
                            </summary>
                            <ul class="post-list">
                                {tags[tag]
                                    .sort(
                                        (a, b) =>
                                            b.data.date.valueOf() -
                                            a.data.date.valueOf(),
                                    )
                                    .map((post) => (
                                        <li>
                                            <a href={`/blog/${post.id}/`}>
                                                <span class="post-date">
                                                    <FormattedDate
                                                        date={post.data.date}
                                                    />
                                                </span>
                                                <span class="post-title">
                                                    {post.data.title}
                                                </span>
                                            </a>
                                        </li>
                                    ))}
                            </ul>
                        </details>
                    ))
                }
            </div>
        </div>

        <!-- Right Sidebar (Desktop Only) -->
        <aside class="right-sidebar-container">
            <RightSidebar />
        </aside>
    </div>
</Layout>

<style>
    /* 3-Column Grid Layout */
    .page-layout {
        display: grid;
        grid-template-columns: 280px 1fr 280px; /* Left, Middle, Right */
        gap: 2rem;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
        align-items: start;
    }

    /* Left Sidebar */
    .left-sidebar {
        position: sticky;
        top: 2rem;
        height: fit-content;
        border-right: 1px solid var(--color-border);
        padding-right: 1.5rem;
    }

    /* Right Sidebar */
    .right-sidebar-container {
        position: sticky;
        top: 2rem;
        height: fit-content;
        border-left: 1px solid var(--color-border);
        padding-left: 1.5rem;
    }

    /* Main Content */
    .main-content {
        width: 100%;
        min-width: 0;
    }

    @media (max-width: 1200px) {
        .page-layout {
            grid-template-columns: 280px 1fr;
            max-width: 1000px;
        }
        .right-sidebar-container {
            display: none;
        }
        .left-sidebar {
            padding-right: 1.5rem;
        }
    }

    @media (max-width: 900px) {
        .page-layout {
            grid-template-columns: 1fr;
            padding: 1rem;
        }

        .left-sidebar {
            position: fixed !important;
            top: 0 !important;
            height: 100vh !important;
            max-height: 100vh !important;
            z-index: 1000;
        }

        .main-content {
            order: 1;
        }
    }

    h1 {
        margin-bottom: 2rem;
        border-bottom: 2px solid var(--color-border);
        padding-bottom: 0.5rem;
    }

    /* Tags Styles */
    .tags-container {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .tag-group {
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 0.5rem;
        background: var(--color-bg-secondary);
    }

    .tag-group[open] {
        background: var(--color-bg);
    }

    .tag-name {
        cursor: pointer;
        padding: 0.5rem;
        font-weight: bold;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        list-style: none;
        user-select: none;
    }

    .tag-name::-webkit-details-marker {
        display: none;
    }

    .tag-name::after {
        content: "+";
        margin-left: auto;
        font-weight: normal;
        font-size: 1.2rem;
        color: var(--gray);
    }

    details[open] .tag-name::after {
        content: "-";
    }

    .tag-icon {
        margin-right: 0.5rem;
    }

    .count {
        margin-left: 0.5rem;
        font-size: 0.8rem;
        color: var(--gray);
        background: var(--gray-light);
        padding: 0.1rem 0.4rem;
        border-radius: 12px;
        font-weight: normal;
    }

    .post-list {
        list-style: none;
        padding: 0 1rem 1rem 1.5rem;
        margin: 0;
        border-top: 1px solid var(--color-border);
        margin-top: 0.5rem;
    }

    .post-list li {
        margin-top: 0.5rem;
    }

    .post-list a {
        text-decoration: none;
        color: var(--color-text);
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: color 0.2s;
    }

    .post-list a:hover {
        color: var(--accent);
    }

    .post-date {
        font-family: monospace;
        color: var(--gray);
        font-size: 0.9em;
        white-space: nowrap;
    }

    .post-title {
        font-weight: 500;
    }
</style>
